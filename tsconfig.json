{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"allowJs": true,
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src"
	]
}
